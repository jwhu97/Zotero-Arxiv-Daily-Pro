# ==================== 必需配置 ====================
# Zotero 配置（必填）
ZOTERO_ID=your_zotero_id                    # 你的 Zotero User ID（数字），从 https://www.zotero.org/settings/security 获取
ZOTERO_KEY=your_zotero_api_key  # Zotero API Key，从 https://www.zotero.org/settings/security 获取

# arXiv 查询配置（必填）
ARXIV_QUERY=cs.AI+cs.CV+cs.LG+cs.CL   # arXiv 分类，用 + 连接多个类别

# 邮件配置（必填）
SMTP_SERVER=smtp.qq.com               # SMTP 服务器地址
SMTP_PORT=465                         # SMTP 端口（465 用于 SSL，587 用于 TLS）
SENDER=your_email@qq.com              # 发件邮箱
SENDER_PASSWORD=your_smtp_password    # SMTP 授权码（不是邮箱登录密码！）
RECEIVER=your_email@qq.com            # 收件邮箱

# ==================== 可选配置 ====================
# 论文数量限制
MAX_PAPER_NUM=5                   # 最多推荐的论文数，-1 表示不限制（默认 100）

# 空邮件发送
SEND_EMPTY=False                      # 没有新论文时是否发送空邮件（默认 False）

# Zotero 过滤规则（gitignore 风格）
ZOTERO_IGNORE=                        # 例如：AI Agent/\n**/survey\n!LLM/survey

# ==================== 功能开关配置 ====================
# 控制哪些功能启用，可以关闭耗时功能以加速测试
ENABLE_AFFILIATIONS=true              # 是否提取作者单位信息（需要下载 LaTeX 源码）
ENABLE_CODE_URL=true                  # 是否查询代码链接（从 abstract 提取）
ENABLE_TAGS=true                      # 是否提取关键词标签
ENABLE_OVERVIEW_FIGURE=true           # 是否提取论文图片（architecture/overview）

# 懒加载配置 - 只对前 N 篇论文提取详细信息
DETAILED_INFO_LIMIT=-1                # 提取详细信息的论文数量限制，-1 表示全部提取
                                      # 例如：设为 10 则只对前 10 篇论文提取 affiliations/图片等

# 邮件生成间隔
EMAIL_INTERVAL=10                     # 处理每篇论文后的等待时间（秒），避免 API 速率限制

# LLM 配置（默认使用本地 Qwen2.5-3B 模型）
USE_LLM_API=0                        # 是否使用 API（0=本地模型，1=API）
LANGUAGE=Chinese                      # TLDR 语言（默认 English）

# 如果 USE_LLM_API=1，则需要以下配置：
OPENAI_API_KEY=your_api_key                 # API Key（推荐使用 SiliconFlow 免费额度）
OPENAI_API_BASE=https://open.bigmodel.cn/api/paas/v4/  # API 地址
MODEL_NAME=glm-4.5-flash   # 模型名称

# ==================== 图片提取配置 ====================
# 图片提取模式（选择一种）
IMAGE_EXTRACTION_MODE=vision_llm      # 可选值：
                                      # - vision_llm (默认): 使用 Vision LLM 从 LaTeX 提取架构图
                                      # - mineru: 使用 MinerU + Qwen3-VL 评分提取关键图片
                                      # - none: 不提取图片

# Vision LLM 模式配置（IMAGE_EXTRACTION_MODE=vision_llm 时需要）
VISION_MODEL_NAME=glm-4.1v-thinking-flash  # Vision LLM 模型名称
SKIP_VISION_LLM=false                      # 是否跳过 Vision LLM 调用（调试用）

# MinerU 模式配置（IMAGE_EXTRACTION_MODE=mineru 时需要）
ENABLE_CHARTS=true

# ================================= MinerU API配置（图片提取）==================================
# 请访问 https://mineru.net 注册并获取您的API Token
MINERU_TOKEN=your_mineru_token_here

# ================================= Qwen3-VL图片评分配置 ==================================
# 请访问 https://modelscope.cn 注册并获取您的API Key
QWEN_API_KEY=your_qwen_api_key_here
QWEN_MODEL=Qwen/Qwen3-VL-8B-Instruct
QWEN_BASE_URL=https://api-inference.modelscope.cn/v1/

# ================================= MinerU 高级配置 ==================================
MINERU_API_URL=https://mineru.net/api/v4/extract
MINERU_TIMEOUT=86400                      # API超时时间（秒）
MINERU_MAX_IMAGES_PER_PAPER=5         # 每篇论文最大提取图片数
MINERU_MIN_SCORE_THRESHOLD=6          # 图片最低分数要求（1-10）
MINERU_CHECK_INTERVAL=60              # 状态查询间隔（秒）
MINERU_MAX_ATTEMPTS=100               # 最大查询尝试次数
MINERU_CACHE_DURATION=86400          # 缓存持续时间（秒）